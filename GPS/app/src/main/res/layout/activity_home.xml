<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.toutoum.helb.gps.HomeActivity"
    android:background="@drawable/parchemin2">


    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/bBookmark"
        android:background="@drawable/bookmark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="intentBookmark"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <Button
        android:id="@+id/bHistory"
        android:background="@drawable/history2"
        android:layout_marginTop="32dp"
        android:onClick="intentHistory"
        android:layout_below="@+id/bBookmark"
        android:layout_alignParentStart="true"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <Button
        android:id="@+id/bNew"
        android:background="@drawable/shieldadd"
        android:layout_marginTop="33dp"
        android:onClick="intentNew"
        android:layout_below="@+id/bHistory"
        android:layout_alignParentStart="true"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/bMenu"
        android:background="@drawable/potatos"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/textViewHistorique"
        android:id="@+id/bHist"
        android:layout_alignBaseline="@+id/bHistory"
        android:layout_alignBottom="@+id/bHistory"
        android:layout_toEndOf="@+id/bHistory"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="@null"
        android:textAlignment="textStart"
        android:onClick="intentHistory"
        />

    <Button
        android:text="@string/textViewFavoris"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:id="@+id/bBook"
        android:layout_alignBaseline="@+id/bBookmark"
        android:layout_alignBottom="@+id/bBookmark"
        android:layout_toEndOf="@+id/bBookmark"
        android:background="@null"
        android:textAlignment="textStart"
        android:onClick="intentBookmark"/>

    <Button
        android:text="@string/textViewNouveau"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="@null"
        android:id="@+id/bnew1"
        android:layout_alignBaseline="@+id/bNew"
        android:layout_alignBottom="@+id/bNew"
        android:layout_toEndOf="@+id/bNew"
        android:textAlignment="viewStart"
        android:onClick="intentNew"
        />

</RelativeLayout>
